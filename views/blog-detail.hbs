<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link rel="stylesheet" href="../public/assets/css/style_1.css" />
  </head>
  <body>
    <!-- NavBar -->
       <nav>
      <div class="left">
          <a href="/"> 
              <img  src="../public/assets/images/logo1.png" alt="maju terus">
          </a>
          <ul>
              <li>
                  <a href="/">Beranda</a>
              </li>
              <li> 
                  <a href="/blog">Blog</a>
              </li>
              <li> 
                  <a href="/">Service</a>
              </li>
              <li> 
                  <a href="/">Project</a>
              </li>
          </ul>
            {{#if isLogin}}
                  <ul style="margin-left: 260px;">
                    <li> 
                        <a href="/login">Hallo, {{user.name}}</a>
                    </li>
                    <li> 
                        <a href="/logout">Logout</a>
                    </li>
                  </ul>
              {{else}}
                  <ul style="margin-left: 260px;">
                    <li> 
                        <a href="/login">Login</a>
                    </li>
                    <li> 
                        <a href="/register">register</a>
                    </li>
                  </ul>
               {{/if}}
      </div>

      <div class="right">
          <a href="/contact">Contact</a>
      </div>
    </nav>

    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{blog.title}}</h1>
        <div class="author">{{blog.postAt}} | {{blog.author}} </div>
        <img src="../public/assets/images/blog-img-detail.png" alt="img detail from blog" />
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
  </body>
</html>
